@{
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
    ViewData["Title"] = "User Management";
}
@model IEnumerable<User>
<link href="https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/4.5.2/css/bootstrap.css" rel="stylesheet" />
<link href="https://cdn.datatables.net/1.10.25/css/dataTables.bootstrap4.min.css" rel="stylesheet" />
<link href="~/css/UserList.css" rel="stylesheet" />
<script src="~/lib/jquery/dist/jquery.js"></script>
<script src="https://cdn.datatables.net/1.10.25/js/jquery.dataTables.min.js"></script>
<script src="https://cdn.datatables.net/1.10.25/js/dataTables.bootstrap4.min.js"></script>
<script>
    $(document).ready(function () {
        $.noConflict();
        $('#example').DataTable({ responsive: true });
    });
</script>

<!--Main content body-->
<div class="col-11 my-table">
    <table id="example" class="table table-hover table-dark table-bordered">
        <thead>
            <tr>
                <th>User ID</th>
                <th>Email</th>
                <th>Ingame Name</th>
                <th>Server</th>
                <th>Facebook</th>
                <th>Verified</th>
                <th>Deleted</th>
                <th></th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var user in Model)
            {
                <tr>
                    <th>@user.UserID</th>
                    <td>@user.Email</td>
                    <td>@user.InGameName</td>
                    <td>@user.Server</td>
                    <td style="text-align:center">
                        <a href="@user.FacebookLink" class="bi bi-facebook" style="font-size:2rem;"></a>
                    </td>
                    <td style="text-align:center">
                        @if (user.IsVerified == 1)
                        {<i class="bi bi-check-square-fill success-status"></i>}
                        else
                        { <i class="bi bi-x-square-fill fail-status"></i>}
                    </td>
                    <td style="text-align:center">
                        @if (user.IsDeleted == 1)
                        {<i class="bi bi-check-square-fill success-status"></i>}
                        else
                        { <i class="bi bi-x-square-fill fail-status"></i>}
                    </td>
                    <td style="text-align:center" width="12%">
                        <a asp-action="BanUser" class="btn btn-warning my-button">Ban User</a>
                    </td>
                    <td style="text-align:center" width="12%">
                        <a href="#" class="btn btn-danger my-button">Delete User</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>