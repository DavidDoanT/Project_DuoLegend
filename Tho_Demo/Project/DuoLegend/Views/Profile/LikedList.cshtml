@model IEnumerable<DuoLegend.Models.User>

@{
    ViewData["Title"] = "LikedList";
}
<link href="~/css/LikedList.css" rel="stylesheet" />
<script>
    $(document).ready(function () {
        $.noConflict();
        $('#table').DataTable();
    });
</script>

    <h1 class="title">Player you liked</h1>
    <table class="table display" id="table">
        <thead>
            <tr>
                <
                <th>
                    Ingame Name
                </th>
                <th>
                    Server
                </th>
                <th>
                    HasMic
                </th>
                <th>
                    Lane
                </th>
                <th>
                    Note
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>

                    <td>
                        @item.InGameName
                    </td>
                    <td>
                        @item.Server
                    </td>
                    <td>
                        @if (@item.HasMic == true)
                        {<i class="bi bi-mic"></i>}
                        else
                        { <i class="bi bi-mic-mute"></i>}
                        
                    </td>
                    <td>
                        @item.Lane
                    </td>
                    <td>
                        @item.Note
                    </td>
                    <td>
                        <a class="btn btn-primary" asp-controller="Profile" asp-action="Index" asp-route-inGameName="@item.InGameName" asp-route-server="@item.Server"> View profile</a>
                    </td>

                </tr>
            }
        </tbody>
    </table>
