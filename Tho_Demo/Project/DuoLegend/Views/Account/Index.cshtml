<div class="container">
    <center>
        <div class="backContainer">
            <!-- Begin page content -->
            <form class="form-signin" asp-method="post" asp-controller="Account" asp-action="Login">
                <h1 class="h3 mb-3 font-weight-normal">Please sign in</h1>

                <div class="form-group">
                    <input type="text" class="form-control" id="username" name = "username" aria-describedby="username" placeholder="Username" autofocus>
                    <hr>
                    <small id="usernamehelp" class="form-text text-muted">We'll never require your Garena account.</small>
                </div>
                <div class="form-group">
                    <input type="password" name="password" class="form-control" placeholder="Password">
                </div>
                <hr>
                <div class="form-group form-check">
                    <input type="checkbox" class="form-check-input" id="exampleCheck1">
                    <label class="form-check-label" for="exampleCheck1">Remember me</label>
                    <a href="#">Forgot password?</a>
                </div>
                <button type="submit" class="btn btn-danger button">Log in</button>
                <button type="button" class="btn btn-danger buttonfacebook">Log in with Facebook</button>
            </form>
        </div>
    </center>
</div>
