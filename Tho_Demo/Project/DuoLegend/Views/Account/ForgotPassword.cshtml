@model ForgotPasswordViewModel
@{
    ViewData["Title"] = "Forgot Password";
}
<link href="~/css/Login.css" rel="stylesheet" />
<div class="container">
    <div class="backContainer">
        <form class="form-signin" asp-method="post" asp-controller="Account" asp-action="ForgotPassword" id="Form">

            <h1 class="h2 mb-3 font-weight-normal text-center">Forgot Password</h1>
            <span class="text-success">@ViewBag.Message</span>
            <div class="form-group">
                <input type="email" class="form-control" id="email" name="email" asp-for="Email"
                       placeholder="Please enter your email">
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="text-center">
                <button type="submit" class="btn btn-danger button "><i class="bi bi-box-arrow-in-right"></i>Submit</button>
            </div>
        </form>
    </div>
</div>


